                poly = np.array(seg).reshape((int(len(seg)/2), 2))
                polygon = patches.Polygon(poly, linewidth=2, edgecolor='blue', facecolor='none')
                ax.add_patch(polygon)
    
    plt.axis('off')
    plt.show()

